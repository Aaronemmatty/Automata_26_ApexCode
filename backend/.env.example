# Copy this to .env and fill in your values

# Database
DATABASE_URL=sqlite+aiosqlite:///./sais.db
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# JWT
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# App
APP_NAME=SAIS
DEBUG=True
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:5174,http://127.0.0.1:5174,http://localhost:5175,http://127.0.0.1:5175

# Gemini AI (optional, enables LLM-based assignment time analysis)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-3-flash-preview

# Google Classroom OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://127.0.0.1:8000/auth/google/callback
# Optional Fernet key for token encryption (leave empty to derive from SECRET_KEY)
TOKEN_ENCRYPTION_KEY=

# File uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10
